@using GridMvc.Html

@model IEnumerable<MDL_PFEP.Models.PFEP.AncWorkstation>

@{
    ViewBag.Title = "ANC na stanowisku";
    string controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}

@Html.Grid(Model).Columns(columns =>
{
    columns.Add(o => o.Anc.Code).Titled("ANC").Sortable(true).Editable(true, "select", (string)ViewBag.ListAnc).RenderValueAs(o => o.Anc.Id.ToString());
    columns.Add(o => o.Anc.Name).Titled("Nazwa ANC").Sortable(true);
    columns.Add(o => o.Workstation.Line.Name).Titled("Linia").Sortable(true);
    columns.Add(o => o.Workstation.Name).Titled("Stanowisko").Sortable(true).Editable(true, "select", (string)ViewBag.ListWorkstation).RenderValueAs(o => o.Workstation.Id.ToString());
    columns.Add(o => o.BomQuantity).Titled("Liczba sztuk montowanych").Sortable(true).Editable(true);
    columns.Add(o => o.Capacity).Titled("Liczba opakowań").Sortable(true).Editable(true);
    columns.Add(o => o.MontageType.Name).Titled("Montaż / kontrola").Sortable(true).Editable(true, "select", (string)ViewBag.ListMontageType).RenderValueAs(o => o.MontageType.Id.ToString());
    columns.Add(o => o.Reserve).Titled("Zapas").Sortable(true);
    columns.Add(o => o.FeederType.Name).Titled("Typ podajnika").Sortable(true).Editable(true, "select", (string)ViewBag.ListFeederType).RenderValueAs(o => o.FeederType.Id.ToString());
    columns.Add(o => o.BufferType.Name).Titled("Rodzaj buforu").Sortable(true).Editable(true, "select", (string)ViewBag.ListBufferType).RenderValueAs(o => o.BufferType.Id.ToString());
    columns.Add(o => o.Id).Titled("").EditActionColumn("", Url.Action("Edit", controllerName), Url.Action("Delete", controllerName));
}).WithPaging(100).Selectable(false)
