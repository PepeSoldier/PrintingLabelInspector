@using GridMvc.Html

@model IEnumerable<MDL_PFEP.Models.PFEP.Results1>

@{
    ViewBag.Title = "Wyniki 1";
    string controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
    ViewBag.ShowResultsMenu = true;
}

@Html.Grid(Model).Columns(columns =>
{
    columns.Add(o => o.AncCode).Titled("ANC").Sortable(true);
    columns.Add(o => o.AncName).Titled("Nazwa ANC").Sortable(true);
    columns.Add(o => o.AncType).Titled("Grupa ANC").Sortable(true);
    columns.Add(o => o.LineName).Titled("Linia").Sortable(true);
    columns.Add(o => o.WorkstationName).Titled("Stanowisko").Sortable(true);
    columns.Add(o => o.Width).Titled("Długość (w) [mm]").Sortable(true);
    columns.Add(o => o.Depth).Titled("Szerokość (d) [mm]").Sortable(true);
    columns.Add(o => o.Height).Titled("Wysokość (h) [mm]").Sortable(true);
    columns.Add(o => o.Returnable).Titled("Zwrotne").Sortable(true);
    columns.Add(o => o.Quantity).Titled("Ilość w opakowaniu").Sortable(true);
    columns.Add(o => o.Weight).Titled("Waga opakowania brutto [kg]").Sortable(true);
    columns.Add(o => o.Capacity).Titled("Liczba opakowań").Sortable(true);
}).WithPaging(100).Selectable(false)
