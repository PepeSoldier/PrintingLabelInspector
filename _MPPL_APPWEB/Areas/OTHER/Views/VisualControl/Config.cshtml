        jobItemConfigGrid.RefreshGrid();
    });

    $("#btnTest").click(function () {
        $.get("/OTHER/VisualControl/Tester", function (data) {
            wnd = new PopupWindow(1000, 400);
            wnd.Init("ConfigTester", "Testowanie konfiguracji");
            wnd.Show(data);
        });
    });

</script>