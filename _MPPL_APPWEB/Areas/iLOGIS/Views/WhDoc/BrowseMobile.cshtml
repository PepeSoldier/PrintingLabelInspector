
@{
    ViewBag.Title = "Dokumenty WZ";
}

<style>
    .whDoc {
        width: 100%;
        height: 110px;
        background-color: #e9f7fd1a;
        padding-top: 5px;
        padding-left: 5px;
        float: left;
    }
        .whDoc:hover {
            background-color: #e9f7fd2a;
        }

    .fontSizeBig {
        font-size: 28px;
        font-weight: bold;
    }
</style>

<div class="row no-gutters" id="whDocuments">
        
</div>


<script id="WhDocTemplate" type="x-tmpl-mustache">
    <div class="col-4 p-1">
        <div class="whDoc" data-id="{{Id}}">
            <div class="row no-gutters">
                <div class="col-5 textGreen fontSizeBig">{{DocumentNumber}}</div>
                <div class="col-7">
                    <div class="row no-gutters">
                        <div class="col-12 textGrayout">{{DocumentDate|FormatDotNetDateTime}}</div>
                        <div class="col-12 textBlue">{{ContractorName}}</div>
                    </div>
                </div>
            </div>
            
            <div class="row no-gutters">
                <div class="col-5 textGrayout">Wystawił:</div>
                <div class="col-7">{{CreatorName}}</div>
            </div>
            <div class="row no-gutters">
                <div class="col-5 textGrayout">Zatwierdził:</div>
                <div class="col-7">{{ApproverName}}</div>
            </div>
        </div>
    </div>
</script>

<script type="text/javascript">
    var whDocBrowseMobile = new WhDocBrowseMobile();
    $(document).ready(function () {
        console.log("WhDocument BrowseMobile Loaded");
        whDocBrowseMobile.Init();
    });

</script>
