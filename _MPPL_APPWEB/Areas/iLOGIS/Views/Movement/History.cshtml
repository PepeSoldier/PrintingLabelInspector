
@{
    ViewBag.Title = "Historia Przesunięć";
}
<style>
    .cellArrow {
        background: #4cbdff59 !important;
        color: #3fbeda;
    }
</style>

<div class="row no-gutters mb-4">
    <div class="col-12">
        <div class="formArea shadow">
            <form id="formStock">
                <fieldset>
                    <div class="form-group row" id="formGroup" style="margin-bottom: 0;">
                        <div class="col-12 pb-1">
                            <div class="row">
                                <label for="SourceAccountingWarehouseName" class="col-1 col-form-label">
                                    Źródło
                                </label>
                                <div class="col-2 "  >
                                    <input type="text" class="form-control" placeholder="Mag. ksieg" name="SourceAccountingWarehouseName" id="SourceAccountingWarehouseName" autocomplete="nope">
                                </div>
                                <div class="col-2 ">
                                    <input type="text" class="form-control" placeholder="Mag" name="SourceWarehouseName" id="SourceWarehouseName" autocomplete="nope">
                                </div>
                                <div class="col-2 ">
                                    <input type="text" class="form-control" placeholder="Lokacja" name="SourceLocationName" id="SourceLocationName" autocomplete="nope">
                                </div>
                                <div class="col-2  ">
                                    <input type="text" class="form-control" placeholder="Numer Seryjny" name="SourceStockUnitSerialNumber" id="SourceStockUnitSerialNumber" autocomplete="nope">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 pb-3">
                            <div class="row">
                                <label for="DestinationAccountingWarehouseName" class="col-1 col-form-label">
                                    Cel
                                </label>
                                <div class="col-2">
                                    <input type="text" class="form-control" placeholder="Mag. ksieg" name="DestinationAccountingWarehouseName" id="DestinationAccountingWarehouseName" autocomplete="nope">
                                </div>
                                <div class="col-2 ">
                                    <input type="text" class="form-control" placeholder="Mag" name="DestinationWarehouseName" id="DestinationWarehouseName" autocomplete="nope">
                                </div>
                                <div class="col-2 ">
                                    <input type="text" class="form-control" placeholder="Lokacja" name="DestinationLocationName" id="DestinationLocationName" autocomplete="nope">
                                </div>
                                <div class="col-2 ">
                                    <input type="text" class="form-control" placeholder="Numer Seryjny" name="DestinationStockUnitSerialNumber" id="DestinationStockUnitSerialNumber" autocomplete="nope">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 pb-1">
                            <div class="row">
                                <label for="ItemCode" class="col-1 col-form-label">
                                    Artykuł
                                </label>
                                <div class="col-3">
                                    <input type="text" class="form-control" placeholder="Kod" name="ItemCode" id="ItemCode" autocomplete="off">
                                </div>
                                <div class="col-3">
                                    <input type="text" class="form-control" placeholder="Nazwa" name="ItemName" id="ItemName" autocomplete="nope">
                                </div>
                                <div class="col-3">
                                    <input type="number" class="form-control" placeholder="Ilość" name="QtyMoved" id="QtyMoved" autocomplete="nope">
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <label for="MovementType" class="col-1 col-form-label">
                                    Ogólne
                                </label>
                                <div class="col-3">
                                    <input type="number" class="form-control" placeholder="Rodzaj przemieszczenia" name="MovementType" id="MovementType" autocomplete="nope">
                                </div>
                                <div class="col-3">
                                    <input type="text" class="form-control datepicker" placeholder="Data" name="MovementDate" id="MovementDate" autocomplete="nope">
                                </div>
                                <div class="col-3">
                                    <input type="text" class="form-control" placeholder="Użytkownik" name="UserName" id="UserName" autocomplete="off">
                                </div>
                                <div class="col-1 ml-2 btn btn-info" id="searchButton">
                                    @*<input type="button" class="form-control btn btn-block btn-info" placeholder="Lokacja">*@
                                    Szukaj
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>


<div class="row no-gutters">
    <div class="col-12" style="overflow-x: auto">
        <div id="grid" style="width:1600px; max-width: 100%;"></div>
    </div>
</div>

<script type="text/javascript">
    var movementHistory = new MovementHistory("#grid");

    $(document).ready(function () {
        movementHistory.InitGrid();
        movementHistory.RefreshGrid();
    });

</script>
