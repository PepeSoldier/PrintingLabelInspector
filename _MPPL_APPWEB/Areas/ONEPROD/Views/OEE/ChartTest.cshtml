@model _MPPL_WEB_START.Areas._APPWEB.ViewModels.ChartViewModel
@{
    ViewBag.Title = "Charts";
}

    
<div class="row">
    <div class="col-12">
        <div id="testCh">
            <canvas id="myChart"></canvas>
            <div id="chartOEE"></div>
        </div>
    </div>
</div>

<script src="~/_ClientAppJS/ExternalLibraries/ChartJS/Chart.js"></script>

<script type="text/javascript">

    var data = @Html.Raw(Json.Encode(Model));
    $(document).ready(function () {
        console.log(data);
        RefreshChart(data);
        testChart();
        console.log("chuj...");
    });

    function ClearChart() {
        console.log("clear");
        $("#chartOEE").html("");
        $('#chartOEE').append('<canvas id="chartOeeResults"></canvas>');
    }    
    function RefreshChart(data) {
        ClearChart();
        var myChart = new Chart('chartOeeResults', {
            title: data.title,
            type: 'bar',
            data: {
                labels: data.labels,
                datasets: [
                    {
                    label: data.datasets[0].label,
                    data: data.datasets[0].data,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                    },
                    {
                        label: data.datasets[1].label,
                        data: data.datasets[1].data,
                        backgroundColor: [
                            'rgba(0, 0, 255,0)'
                        ],
                        borderColor: [
                            'rgb(0, 0, 255)'
                        ],
                        borderWidth: 1,
                        type: 'line'

                    }
                ]
            },

        });
        console.log("wykres narysowany");
    }

</script>