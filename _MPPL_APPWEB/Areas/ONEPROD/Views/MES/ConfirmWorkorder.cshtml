
@using MDL_ONEPROD.Model.Scheduling

@model MDL_ONEPROD.Model.Scheduling.Workorder
@{
    Layout = null;    
    ViewBag.Title = "Potwierdz ilość";
}

    <div class="row">
        <div class="col-6">
            @using (Html.BeginForm("ConfirmWorkorder", "MES", FormMethod.Post, new { @class = "form-horizontal", @id = "ConfirmWorkorderForm", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.Hidden("workorderId", Model.Id)
                @Html.Hidden("workplaceId", (int)ViewBag.WorkplaceId)

                <div class="formInlineGroup">
                    <div class="formInlineRow">
                        @Html.Label("Gotowa ilosć", new { @class = "control-label" })
                        @Html.TextBox("qty", Model.Qty_Total - Model.Qty_Remain, new { @class = "form-control form-control-big", @autocomplete = "off" })
                    </div>
                    <div class="formInlineRow">

                    </div>
                </div>
            }
        </div>
        <div class="col-3">
        </div>
        <div class="col-3">
            <div class="formInlineRow">
                <div class="btn btn-lg btn-default" id="ConfirmWorkorderFormSubmit"
                     style=" width: 100%; height: 76px; margin-top: 40px; line-height: 55px; font-size: 40px;">
                    Zapisz
                </div>
            </div>
        </div>
    </div>
<hr />
<div class="row">
    <div class="col-6" id="keypad56"></div>
    
    <div class="col-3">
    </div>
    <div class="col-3">
        <div class="formInlineRow">
            <div class="btn btn-lg btn-danger" id="DeleteWorkorder"
                 style=" width: 100%; height: 76px; margin-top: 275px; line-height: 55px; font-size: 40px;">
                Usuń
            </div>
        </div>
    </div>

</div>


<script type="text/javascript">
    var keypad = new KeyPad("#qty", "#keypad56");
    keypad.Init();

    
</script>
