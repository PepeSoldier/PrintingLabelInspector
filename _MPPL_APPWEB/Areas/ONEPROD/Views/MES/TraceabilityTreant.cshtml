@{
    ViewBag.Title = "TraceabilityTreant";
    Layout = null;
}

<style>
    .nodeChild {
        border: solid 1px green;
    }

    .Treant .node.collapsed {
        background-color: #4f8090;
    }

    .node-name {
        font-weight: bold;
        margin: -4px -4px 2px -4px;
        background-color: #23424d;
    }

    .nodeExample1 {
        background-color: #405c65;
        position: relative;
        min-height: 84px;
    }
    .node-picture {
        position: absolute;
        right: 1px;
        top: 21px;
        width: 60px;
        height: 60px;
        background: #496973;
    }
    .node img {
        position: absolute;
        right: -8px;
        top: 21px;
        max-width: 60px;
        max-height: 60px;
        background: #496973;
    }
    .node-prodLogId {
        display: none;
    }
    .node-desc {
        color: #5bbade;
        max-width: 130px;
        max-height: 20px;
        overflow: hidden;
    }
    .node-declaredQty {
        float: left;
        margin-right: 5px;
        width: 100%;
    }
    .node-workOrderTotalQty {
        padding-left: 64px;
        padding-right: 64px;
        text-align: right;
        display: none;
    }
    p.node-datetime {
        color: #62909e;
    }
    p.node-serialNumber {
        color: #58e058;
    }
    .legendBox{
        padding-left: 5px;
    }
</style>

<div class="row">
    <div class="col-12" style="display: flex;">
        <div class="legendBox" style="color: #ffffff38;">Legenda: </div>
        <div class="legendBox" style="color: white; font-weight:bold;">KOD,</div>
        <div class="legendBox" style="color: #5bbade;">NAZWA,</div>
        <div class="legendBox" style="color: white;">ILOŚĆ,</div>
        <div class="legendBox" style="color: #62909e;">DATA PRODUKCJI,</div>
        <div class="legendBox" style="color: #58e058;">NUMER SERYJNY</div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div id="tree-simple" style="width:1135px; height: 690px;"></div>
    </div>
</div>

