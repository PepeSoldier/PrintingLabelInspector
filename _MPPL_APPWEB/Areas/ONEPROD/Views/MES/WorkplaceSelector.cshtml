@using MDL_ONEPROD.Model.Scheduling;
@using MDLX_MASTERDATA.Entities;
@using GridMvc.Html

@model _MPPL_WEB_START.Areas.ONEPROD.ViewModels.Mes.WorkplaceViewModel
@{
    ViewBag.Title = "Wybór Stanowiska";
    DateTime LastDate = DateTime.Now.Date.AddYears(-1);
}

<style>
    .resourceName {
        height: 55px;
        width: 100%;
        font-size: 22px !important;
        padding-top: 10px;
        
    }
</style>

<div class="row no-gutters" style="margin-top: 10px;">
    @foreach (Workplace w in Model.Workplaces)
    {
    <div class="col-6 col-sm-4 col-md-3 col-lg-2">
        <a href="@Url.Action("Workplace", new { id = w.Id })" class="confMenu shadow" style="height: 90px; width: 90%;overflow: hidden;">
            <div class="resourceName">@w.Name</div>
            <div class="confMenuText">@w.Machine.Name</div>
        </a>
    </div>
    }
</div>


