@using MDL_ONEPROD.Model.Scheduling
@using GridMvc.Html

@model _MPPL_WEB_START.Areas.ONEPROD.Base.ViewModels.ResourceViewModel
@{
    ViewBag.Title = "Energy Cost";
}

<style>
    #resourceGrid input[type=checkbox], input[type=radio] {
        height: 25px;
        width: 25px;
    }
</style>


<div id="configMenu">
    @{ Html.RenderAction("Index"); }
</div>


<div class="row">
    <div class="col-md-12" style="max-width: 1600px;">
        <div id="energyCostRepo"></div>
    </div>
</div>

<script type="text/javascript">

    var energyCostRepo = new EnergyCost("#energyCostRepo");
        energyCostRepo.InitGrid();
        energyCostRepo.RefreshGrid();
        SelectActiveMenuLink(@Html.Raw(Json.Encode(ViewContext.RouteData.Values["action"])));

</script>



